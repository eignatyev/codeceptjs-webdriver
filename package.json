{
  "name": "codeceptjswebdriver",
  "version": "1.0.0",
  "description": "",
  "main": "codecept.conf.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start-selenium-service": "npx selenium-standalone start",
    "kill-selenium-service": "npx kill-port 4444",
    "test:cross": "npm run start-selenium-service & (npx codeceptjs run-multiple basic && npm run kill-selenium-service)",
    "test:chrome": "npm run start-selenium-service & (npx codeceptjs run-multiple basic:chrome && npm run kill-selenium-service)",
    "test:firefox": "npm run start-selenium-service & (npx codeceptjs run-multiple basic:firefox && npm run kill-selenium-service)",
    "test:selenoid:cross": "npx codeceptjs run-multiple basic",
    "test:selenoid:chrome": "npx codeceptjs run-multiple basic:chrome",
    "test:selenoid:firefox": "npx codeceptjs run-multiple basic:firefox"
  },
  "repository": {
    "type": "git",
