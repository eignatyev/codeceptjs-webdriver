  "bugs": {
    "url": "https://github.com/eignatyev/codeceptjs-webdriver/issues"
  },
  "homepage": "https://github.com/eignatyev/codeceptjs-webdriver#readme",
  "devDependencies": {
    "@wdio/selenium-standalone-service": "^6.4.0",
    "chai": "^4.2.0",
    "codeceptjs": "^2.6.10",
    "kill-port": "^1.6.1",
    "webdriverio": "^6.4.4"
  }
}
